{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": true,
    "jsx": "react",
    "lib": ["es6", "es2015", "es2017", "dom"],
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "include": [
    "src/**/*",
    "./typings/**/*.d.ts",
    "@old/server_old.js",
    "@old/index_old.js", "utils", "@old/db.js", "@old/cache", "@old/helpers", "@old/helpers.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
